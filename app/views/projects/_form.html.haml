= f.input :name
= f.input :description, as: :text
= f.input :input_folder
= f.input :pdf_folder
= f.input :active, as: :boolean
= f.input :run_frequency, collection: ['Daily','Hourly','Weekly','Monthly'], prompt: false
#datetimepicker6
  = f.input :next_run, as: :datetime_picker
  :javascript
    $(function () {
        $('#datetimepicker6').datetimepicker();
    });

.modal-footer
  = f.button :submit, "Save", class: %w(btn btn-default btn-success)
  = link_to "Cancel", projects_path , :class => "btn btn-sm btn-default"

