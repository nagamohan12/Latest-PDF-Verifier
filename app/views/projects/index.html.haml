.cnt-header
  .cnt-header-txt
    Projects
  = search_form_for @search do |s|
    %table{:align => "right", :border => "0", :cellpadding => "0", :cellspacing => "7"}
      %tr
        %td
          %img{:alt => "search", :height => "15", :src => "assets/search-icon.png", :width => "15"}/
        %td
          = s.text_field :name_cont, class: "form-style"
        %td
          = s.text_field :last_run_cont, class: "form-style"
        %td
          = s.submit  "Search", class: "btn-style"

  = paginate @projects
.cnt-box
  %table#alternatecolor{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %th{:width => "6%"} S No
      %th{:align => "left", :width => "14%"}
        = sort_link @search, :name, "Project Name",class: "aaa"
      %th{:align => "left", :width => "15%"} 
        = sort_link @search, :last_run, "Last Ran At"
      %th{:align => "center", :valign => "middle", :width => "10%"} Test Status
      %th{:align => "left", :width => "7%"} Processed
      %th{:align => "left", :width => "5%"} Success
      %th{:align => "left", :width => "6%"} Failed
      %th.active{:align => "left", :width => "16%"} 
        = sort_link @search, :next_run, "Next Run At"
      %th.active{:align => "left", :width => "13%"} 
        = sort_link @search, :run_frequency, "Frequency"
      %th.active{:align => "left", :width => "8%"} 
        = sort_link @search, :active, "Project Status"
    - @i = 0
    - @projects.each do |project|
      -@i = @i+1
      %tr
        %td{:align => "center"}= @i
        %td= link_to project.name, project
        - if project.last_test_run.present?
          - latest_test = project.last_test_run
          %td= project.last_run.strftime('%d-%b-%Y %I:%M%p') if project.last_run.present?
          - status_image = project.last_test_failed ? 'success.png' : 'failure.png'
          %td{:align => "center", :valign => "middle"}= image_tag(status_image, size: "28x28", alt: latest_test.status)
          %td.blue{:align => "center", :valign => "middle"}= link_to_if(latest_test.processed > 0, latest_test.processed, reports_path(test_run_id: latest_test.id, status: 'processed', from: 'projects'), :class => "link-underline")
          %td.red{:align => "center", :valign => "middle"}= link_to_if(latest_test.success > 0, latest_test.success, reports_path(test_run_id: latest_test.id, status: 'success', from: 'projects'), :class => "link-underline")
          %td.green{:align => "center", :valign => "middle"}= link_to_if(latest_test.failed > 0,latest_test.failed, reports_path(test_run_id: latest_test.id, status: 'failure', from: 'projects'), :class => "link-underline")
        - else
          %td= ""
          %td= ""
          %td= ""
          %td= ""
          %td= ""

        %td.active= project.next_run.strftime('%d-%b-%Y %I:%M%p') if project.next_run.present?
        %td= project.run_frequency
        %td= project.active == true ? 'Active' : 'In Active'
