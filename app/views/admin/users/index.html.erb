<h1>Users</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th>User Name</th>
        <th>
      <%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| -%>
   <tr>
    <td><%= user.username %></td>
        <td><%= link_to user.email, admin_user_path(user) %>
    </td>
        <td><%= user.created_at %></td>
    <td>
      <%= link_to "Edit", edit_admin_user_path(user), :class => "btn btn-primary btn-xs"%>
      <%= link_to "Destroy", admin_user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => "btn btn-primary btn-xs" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<div id="posts_list"><%= render :partial => "form" %></div>

<%= link_to "New", new_admin_user_path, :class => 'btn btn-primary' ,:id => "new_form", :onclick=>"slideonlyone('sms_box');"%>
